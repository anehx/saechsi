      {{t 'performance.grades.title'}}
    </div>
    <div class="box-list-item-body box-list-item-body--icon">
      {{sx-icon 'ios-paper-outline'}}
    </div>
  </div>
  <div class="box-list-item clickable" {{action (transition-to 'performance.goals.index')}}>
