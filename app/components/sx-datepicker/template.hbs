{{sx-input
  placeholder = placeholder
  readonly    = true
  value       = (if selected (moment-format selected 'DD.MM.YYYY'))
  click       = (action (mut showModal) true)
  valid       = valid
}}


{{#if showModal}}
  {{#modal-dialog close=(action (mut showModal) false)}}
    {{sx-calendar selected=selected on-select=(action (pipe (action 'select') (action (mut showModal) false)))}}
  {{/modal-dialog}}
{{/if}}
