<div class="container">
  <form class="login-form" {{action 'login' on='submit'}}>
    <h3 class="login-form-heading"><img src="assets/logo.svg"></h3>
    <hr class="colorgraph"><br>

    {{input class='form-control' type='text' value=email placeholder=(t 'login.email')}}
    {{input class='form-control' type='password' value=password placeholder=(t 'login.password')}}

    <button type="submit" class="btn btn-lg btn-block btn-primary">{{t 'login.login'}}</button>

    {{#if error}}
      <div class="alert alert-danger">
        <strong>{{fa-icon 'exclamation-triangle'}}</strong> {{t (concat 'login.errors.' error)}}
      </div>
    {{/if}}
  </form>
</div>
