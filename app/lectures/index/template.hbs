<h3>{{t 'lectures.list'}}</h3>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>{{t 'lectures.name'}}</th>
      <th>{{t 'lectures.color'}}</th>
      <th class="text-right">
        {{#link-to 'lectures.new' tagName='button' class='btn btn-primary btn-sm'}}
          {{fa-icon 'plus'}}
        {{/link-to}}
      </th>
    </tr>
  </thead>
  <tbody>
    {{#each model as |lecture|}}
      {{#unless model.isDeleted}}
        {{#link-to 'lectures.edit' lecture.id tagName='tr' class='pointer'}}
          <td>{{lecture.name}}</td>
          <td>{{lecture.color}}</td>
          <td></td>
        {{/link-to}}
      {{/unless}}
    {{^}}
      <tr>
        <td class="text-center" colspan="3">{{t 'lectures.empty'}}</td>
      </tr>
    {{/each}}
  </tbody>
</table>
