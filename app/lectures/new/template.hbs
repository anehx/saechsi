<h3>{{t 'lectures.new'}}</h3>

<form {{action 'save' on='submit'}}>
  <div class="form-group">
    <label>{{t 'lectures.name'}}</label>
    {{input class='form-control' type='text' value=model.name}}
  </div>

  <div class="form-group">
    <label>{{t 'lectures.color'}}</label>
    {{input class='form-control' type='text' value=model.color}}
  </div>

  <button type="primary" class="btn btn-primary">{{t 'save'}}</button>
  {{#link-to 'lectures.index' tagName='button' class='btn btn-default'}}{{t 'back'}}{{/link-to}}
</form>
